{
  "Jwt": {
    "Key": "troque-essa-chave-por-uma-muito-secreta-!123",
    "Issuer": "ecommerce"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "estoque-route": {
        "ClusterId": "estoque-cluster",
        "Match": {
          "Path": "/api/produtos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/produtos/{**catch-all}"
          }
        ]
      },
      "vendas-route": {
        "ClusterId": "vendas-cluster",
        "Match": {
          "Path": "/api/pedidos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/pedidos/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://localhost:5001/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "estoque-cluster": {
        "Destinations": {
          "estoque-service": {
            "Address": "http://localhost:5002/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "vendas-cluster": {
        "Destinations": {
          "vendas-service": {
            "Address": "http://localhost:5004/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft. AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*"
}